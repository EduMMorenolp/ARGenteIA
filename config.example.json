{
  "agent": {
    "model": "openai/gpt-4o",
    "systemPrompt": "Eres un asistente personal útil, conciso y directo. Respondes en español.",
    "maxTokens": 4096,
    "maxContextMessages": 40
  },
  "models": {
    "openai/gpt-4o": {
      "apiKey": "sk-...",
      "baseUrl": "https://api.openai.com/v1"
    },
    "openai/gpt-4o-mini": {
      "apiKey": "sk-...",
      "baseUrl": "https://api.openai.com/v1"
    },
    "anthropic/claude-3-5-sonnet-20241022": {
      "apiKey": "sk-ant-..."
    },
    "openrouter/meta-llama/llama-3.3-70b-instruct": {
      "apiKey": "sk-or-...",
      "baseUrl": "https://openrouter.ai/api/v1"
    }
  },
  "gateway": {
    "port": 18000
  },
  "channels": {
    "telegram": {
      "botToken": "123456:ABCDEF",
      "allowFrom": ["tu_username_de_telegram"]
    }
  },
  "tools": {
    "bash": {
      "enabled": true,
      "// OS opciones": "Descomentá la que uses: 'linux' o 'windows'",
      "os": "linux",
      "// os (Windows)": "windows",
      "allowlist": ["ls", "cat", "echo", "pwd", "find", "grep", "date", "whoami", "uname"],
      "// allowlist (Windows)": ["ls", "cat", "echo", "pwd", "find", "grep", "date", "whoami", "dir", "Get-ChildItem", "Get-Content", "Get-Date", "Get-Location"],
      "// psExe": "Opcional. Solo si PowerShell no se detecta automáticamente.",
      "// psExe (PS5, Windows 10/11)": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
      "// psExe (PS7, si está instalado)": "C:\\Program Files\\PowerShell\\7\\pwsh.exe"
    },
    "webSearch": {
      "enabled": true
    },
    "readFile": {
      "enabled": true
    },
    "writeFile": {
      "enabled": false
    },
    "readUrl": {
      "enabled": true
    }
  },
  "memory": {
    "dbPath": "./assistant.db",
    "maxContextMessages": 40,
    "compactAt": 60
  }
}
